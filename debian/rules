#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_clean:
	dh_auto_clean

override_dh_build:
	dh_build

override_dh_install:
	rm -rf data/usr/bin/*
	rm -rf data/usr/share/app-install
	rm -rf data/usr/share/applications
	rm -rf data/usr/share/fonts
	rm -rf data/usr/share/mime
	rm -rf data/usr/share/mimelnk
	rm -rf data/usr/share/pixmaps
	rm -rf data/etc/apt/sources.list.d/flexibee.list
	echo FLEXIBEE_CFG=server >> data/etc/default/flexibee
	mkdir -p debian/flexibee-server
	mv data/*	debian/flexibee-server
	dh_install
	cp -f server/flexibee-server debian/flexibee-server/usr/sbin
	cp debian/jaxb-api-2.3.0.jar debian/flexibee-server/usr/share/flexibee/lib/jaxb-api-2.3.0.jar
	sed -i 's/\/var\/run\/flexibee\.pid/\/run\/flexibee\.pid/g'  debian/flexibee-server/etc/init.d/flexibee

#override_dh_clean:
#	debconf-updatepo
#	dh_clean
